{% extends 'templates/layouts/base.twig' %}

{% block content %}
    <style>
        .header-frontpage {
            height: 430px;
        }
    </style>
    <header class="header-frontpage bg-primary-500 py-12">
        <div class="container mx-auto md:flex h-full">
            <div class="md:w-1/3 md:flex flex-col md:h-full">
                <h1 class="text-white text-5xl my-auto">{{ post.title }}</h1>
                <a href="{{ fn('get_post_type_archive_link', 'vacature' ) }}" class="button md:mt-auto md:mr-auto">{{  __('Bekijk vacatures', 'ppmm') }}</a>
            </div>
            <div class="md:w-1/2 ml-auto relative">
                <picture class="absolute"  style="right: 0;">
                    {% if post.thumbnail %}
                        {% set _img = post.thumbnail %}
                    {% else %}
                        {% set _img = Image(options.header_vacature) %}
                    {% endif %}
                    <source srcset="{{ _img.src('medium') }}" media="(max-width: 413px)" />
                    <source srcset="{{ _img.src('medium_large') }}" media="(min-width: 414px) and (max-width: 768px)" />
                    <img src="{{ _img.src('large') }}" alt="{{ _img.alt }}" class="clip-me">
                </picture>
            </div>
        </div>
    </header>
    <main class="container mx-auto md:flex py-20">
        <aside class="md:w-1/4 py-8">
            <nav class="border-l-12 border-secondary-500 p-8 bg-primary-200 content sticky" style="top: 2rem;">
                {% if post.children %}
                <ul>
                    {% for child in post.children %}
                        <li>
                            <a href="{{ child.link }}">{{ child.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
                {% elseif post.parent.children %}
                    <ul>
                        {% for child in post.parent.children %}
                            <li>
                                <a href="{{ child.link }}" class="childnavi {{ post.id == child.id? 'active' : '' }}">{{ child.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </nav>
        </aside>
        <section class="content w-full py-8 md:w-2/3 ml-auto">
            {{ post.content|wpautop }}
        </section>
    </main>
    {% include 'templates/parts/block-mailchimp.twig' %}
    {% include 'templates/parts/content-employers.twig' %}
{% endblock %}
