{% extends 'templates/layouts/base.twig' %}

{% block content %}
    <style>
        .header-frontpage {
            height: 430px;
        }
    </style>
    <header class="header-frontpage bg-primary-500 py-12">
        <div class="container mx-auto md:flex h-full">
            <div class="md:w-1/3 md:flex flex-col md:h-full">
                <h1 class="text-white text-5xl">{{ post.title }}</h1>
                <a href="{{ fn('get_post_type_archive_link', 'vacature' ) }}" class="button md:mt-auto md:mr-auto">{{  __('Bekijk vacatures', 'ppmm') }}</a>
            </div>
            <div class="md:w-1/2 ml-auto relative">
                <picture class="absolute">
                    {% if post.thumbnail %}
                        {% set _img = post.thumbnail %}
                    {% else %}
                        {% set _img = Image(options.header_vacature) %}
                    {% endif %}
                    <source srcset="{{ _img.src('medium') }}" media="(max-width: 413px)" />
                    <source srcset="{{ _img.src('medium_large') }}" media="(min-width: 414px) and (max-width: 768px)" />
                    <img src="{{ _img.src('large') }}" alt="{{ _img.alt }}">
                </picture>
            </div>
        </div>
    </header>
    <main class="container mx-auto md:flex py-8">
        <section class="content md:w-full p-8">
            {{ post.content|wpautop }}
        </section>
    </main>
    {% include 'templates/parts/block-mailchimp.twig' %}
    {% include 'templates/parts/content-employers.twig' %}
{% endblock %}
