<form action="#" class="vacature-soll-form">
     <h3 class="text-xl block">{{ __('Vul hier je gegevens in voor de sollicitatie', 'ppmm') }}</h3>

    <div class="input-group inline-block md:w-1/2">
        <label for="voornaam">{{ __('Voornaam', 'ppmm') }}<span class="required">*</span></label>
        <input type="text" id="voornaam" name="voornaam" class="input-control" required />
    </div>

    <div class="input-group inline-block">
        <label for="naam">{{ __('Achternaam', 'ppmm') }}<span class="required">*</span></label>
        <input type="text" id="naam" name="naam" class="input-control" required />
    </div>

    <div class="input-group">
        <label for="email">{{ __('E-mail', 'ppmm') }}<span class="required">*</span></label>
        <input type="email" id="email" name="email" class="input-control" required />
    </div>

    <div class="input-group">
        <label for="mobiel">{{ __('Mobiele nummer', 'ppmm') }}<span class="required">*</span></label>
        <input type="tel" id="mobiel" name="mobiel" class="input-control" required />
    </div>

    <div class="input-group">
        <input type="file" id="cv" name="cv" />
    </div>
    <div class="input-group">
        <label for="motivatie">{{ __('Motivatie', 'ppmm') }}</label>
        <textarea name="motivatie" id="motivatie" rows="4"></textarea>
    </div>

    <input type="hidden" name="origin" id="origin" value="{{ site.name }}">
    <input type="hidden" name="vacancy" id="vacancy" value="{{ post.ID }}">

    <button type="submit" class="button inline-block mt-4">{{  __('Verstuur', 'ppmm') }}</button>
</form>
