{% extends 'templates/layouts/base.twig' %}

{% block content %}
    <header class="container mx-auto">
        <div class="md:w-2/3 md:ml-auto">
            <h1 class="text-2xl text-secondary-500">{{ __('Zoek in vastgoed vacatures', 'ppmm') }}</h1>
        </div>
    </header>

    <section class="container mx-auto md:flex">
        <aside id="vacature_filter" class="md:w-1/3">
            {% include 'templates/parts/search-form.twig' %}

            <form method="get">
                <div class="form-group">
                    <strong class="block">{{ __('Regio', 'ppmm') }}</strong>
                    <div class="form-group-controls">
                        {% for region in regions %}
                            <input type="checkbox"name="regio_{{ region.term_id }}" name="regio_{{ region.term_id }}" />
                            <label for="regio_{{ region.term_id }}">{{ region.name }}</label>
                        {% endfor %}
                    </div>
                </div>

            </form>
        </aside>
        <main class="md:w-2/3">
            {% for post in posts %}
                {% include 'templates/tease/vacature.twig' with { post : post} only %}
            {% endfor %}
            <aside id="pagination" class="flex justify-between">

                <span class="text-secondary-500">{{ __("%d van de %d vacatures", 'ppmm')|format(posts|length, fn('wp_count_posts', 'vacature').publish) }}</span>
                {% include 'templates/parts/archive/pagination.twig' %}
            </aside>
        </main>
    </section>
{% endblock %}
