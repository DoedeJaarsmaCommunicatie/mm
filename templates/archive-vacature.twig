{% extends 'templates/layouts/base.twig' %}

{% block content %}
    <header class="container mx-auto">
        <h1 class="text-2xl text-secondary-500">{{ __('Zoek in vastgoed vacatures', 'ppmm') }}</h1>
    </header>

    <section class="container mx-auto">
        <aside id="vacature_filter">
            {% include 'templates/parts/search-form.twig' %}
        </aside>
        <main>
            {% for post in posts %}
                {{ post.title }}
            {% endfor %}
            <aside id="pagination" class="flex content-between">

                {{ __("%d van de %d vacatures", 'ppmm')|format(posts|length, fn('wp_count_posts', 'vacature').publish) }}
                {% include 'templates/parts/archive/pagination.twig' %}
            </aside>
        </main>
    </section>
{% endblock %}
