<footer class="bg-primary-500">
    <div class="container mx-auto flex py-6 flex-wrap px-8 md:px-0">
        <div class="md:w-1/6 w-full">
            {% set _logoFooter = Image(theme.theme_mod('custom_logo')) %}
            <img src="{{ _logoFooter.src('medium') }}" alt="{{ site.title }}">
        </div>
        <div class="md:ml-auto md:w-1/3 text-white flex flex-wrap flex-col w-full" style="max-height: {{ footerMenu.items|length -1 }}rem;">
            {% for item in footerMenu.items %}
                <a href="{{ item.link }}">
                    {{ item.title }}
                </a>
            {% endfor %}
        </div>
        <div class="md:w-1/6 w-full text-white">
            Bekijk onze vacatures
            voor makelaardij:
            <a href="{{ makelaarsmensen.link }}">
                <img src="{{ makelaarslogo.src }}" alt="{{ makelaarsmensen.name }}">
            </a>
        </div>
    </div>
</footer>

{% block struct %}
    {% include 'templates/layouts/helpers/std-organisation.twig' %}
{% endblock %}

